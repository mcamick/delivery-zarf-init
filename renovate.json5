{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "ignoreTests": true,
  "baseBranches": ["main"],
  "extends": [
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    "group:all",
    "replacements:all",
    "workarounds:all"
  ],
  "timezone": "America/New_York",
  "schedule": ["at any time"],
  "rebaseWhen": "auto",
  "labels": ["renovate"],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "pre-commit": {
    "enabled": true
  },
  "regexManagers": [
    {
      "fileMatch": [
        "(^|/)zarf(-.+)?\\.ya?ml$", // Matches "zarf*.yaml" and "zarf*.yml"
      ],
      "matchStrings": [
        // Matches agent_image_tag, registry_image_tag, gitea_image, etc.
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*agent_image_tag: (?<currentValue>.*)\\s",
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*registry_image_tag: (?<currentValue>.*)\\s",
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*version: (?<currentValue>.*)\\s",
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?gitea_image: \"[^\"]+:(?<currentValue>[^\"]+)\"\\s",
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?init:(?<currentValue>[^\\s]+)\\s",

        // Regex for injector_version in zarf-config.yaml
        "injector_version: \"(?<currentValue>.*?)\"",
        "injector_amd64_shasum: (?<currentValue>.*?)",
        "injector_arm64_shasum: (?<currentValue>.*?)"
      ],
      "versioningTemplate": "semver"
    }
  ],
  // Add a rule to watch the external Zarf repo
  "packageRules": [
    {
      "description": "Track the external zarf-config.toml file from zarf-dev/zarf repo",
      "matchPackagePatterns": ["^zarf-config"],
      "datasource": "github-tags",
      "depName": "zarf-dev/zarf",
      "lookupName": "zarf-dev/zarf",
      "fileMatch": ["^zarf-config\\.toml$"],
      "versioning": "semver",
      "extractVersion": "^v?(?<version>[\\d\\.]+)$"
    }
  ],
  "docker": {
    "enabled": true
  },
  "hostRules": [
    {
      "matchHost": "registry1.dso.mil",
      "hostType": "docker",
      "description": "Encrypted creds for registry1, scoped to this Github org using: https://docs.renovatebot.com/getting-started/migrating-secrets/#migrate-your-secrets-in-encrypted-form",
      "username": "{{ secrets.IRONBANK_USERNAME }}",
      "password": "{{ secrets.IRONBANK_PASSWORD }}"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "groupName": "Security Updates",
    "labels": ["security"],
    "automerge": true,
    "assignees": ["@defenseunicorns/delivery-aws-iac"]
  },
  "osvVulnerabilityAlerts": true
}
